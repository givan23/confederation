{
  "name": "confederation",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "lerna bootstrap",
    "start": "lerna run --scope @CONF/* --parallel start",
    "build": "lerna run --scope @CONF/* build",
    "serve": "lerna run --scope @CONF/* --parallel serve",
    "clean": "lerna run --scope @CONF/* --parallel clean",
    "test": "lerna run --scope @CONF/* --parallel test",
    "bootstrap": "lerna bootstrap",
    "lint": "echo 'skip'",
    "coverage": "echo 'skip'",
    "update-docker-version": "sed -i.bck \"s|version=\\\"[0-9]*\\.[0-9]*\\.[0-9]*.*\\\"|version=\\\"${npm_package_version}\\\"|\" Dockerfile",
    "version": "npm run update-docker-version && rm -fr Dockerfile.bck && git add Dockerfile"
  },
  "devDependencies": {
    "@types/node": "^15.0.2",
    "lerna": "^4.0.0"
  },
  "version": "0.0.13",
  "dependencies": {
    "@types/react-dates": "^21.8.2",
    "react-dates": "^21.8.0"
  }
}
